<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="fill_button">
        <item name="android:minWidth">100dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="fill_button_orange">
        <item name="android:minWidth">100dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_bg_orange</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppThemeWhite" parent="Widget.MaterialComponents.BottomAppBar">
        <!-- Customize your theme here. -->
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="visible">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="invisible">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="has_text_edit">
        <item name="android:padding">5dp</item>
        <item name="android:textSize">14sp</item>

    </style>


    <style name="Theme_Dialog" parent="android:Theme.Holo.Dialog.NoActionBar">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>
</resources>
